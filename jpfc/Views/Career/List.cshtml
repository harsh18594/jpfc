@{
    ViewData["Title"] = "Career";
}

@section MetaTags{
    <meta name="robots" content="noindex">
}

@section Styles{
    <link href="~/lib/DataTables/DataTables-1.10.18/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/lib/spin/spin.css" rel="stylesheet" />
}

<!--Page Title-->
<section class="page-title" style="background-image:url(../../images/banner-images/career-banner.jpg)">
    <div class="auto-container">
        <div class="content">
            <h1>@ViewData["Title"]</h1>
            <ul class="page-breadcrumb">
                <li><a asp-controller="Admin" asp-action="Index">Home</a></li>
                <li>@ViewData["Title"]</li>
            </ul>
        </div>
    </div>
</section>
<!--End Page Title-->
<!-- Services Section Three-->
<section class="mt-5 mb-5" id="content-container">
    <div class="auto-container">
        <!-- Sec Title -->
        <div class="sec-title centered">
            <h2>Career</h2>
        </div>

        <div class="row clearfix mt-2">
            <div class="col-12">
                <h5>Filter</h5>
            </div>
            <div class="col-12">
                <label><input type="checkbox" id="cb-active-only" checked /> Active Only</label> <i class="fa fa-info-circle" data-toggle="tooltip" title="Includes closed jobs when unchecked"></i>
            </div>
            <div class="col-12">
                
                <a class="ml-2 btn btn-success text-white" asp-controller="Career" asp-action="Create"><i class="fa fa-plus"></i> Create Job</a>
                <a asp-controller="Admin" asp-action="Index" class="btn btn-warning">Back</a>
            </div>
        </div>

        <div class="row clearfix mt-3">
           
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="career-table">
                        <thead>
                            <tr>
                                <th width="120px">Title</th>
                                <th width="200px">Location</th>
                                <th width="200px">Start Date</th>
                                <th>Type</th>
                                <th>Is Draft?</th>
                                <th>Is Closed?</th>
                                <th width="100px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @* dataTable ajax *@
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/lib/moment/moment.js"></script>
    <script src="~/lib/DataTables/DataTables-1.10.18/js/jquery.dataTables.js"></script>
    <script src="~/lib/DataTables/DataTables-1.10.18/js/dataTables.bootstrap4.js"></script>
    <script src="~/lib/DataTables/Plug-ins/datatable-moment.js"></script>
    <script src="~/lib/sweetalert/sweetalert2.js"></script>
    <script src="~/lib/spin/spin.js" asp-append-version="true"></script>

    <script src="~/js/pages/career-list.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            Jpfc.CareerList.init({});
        });
    </script>
}