@using jpfc.Classes
@using Microsoft.AspNetCore.Identity
@using jpfc.ConfigOptions
@using Microsoft.Extensions.Options
@inject IOptions<ContactInfoOptions> ContactInfoOptions

@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @* do not remove google verification *@
    <meta name="google-site-verification" content="2MzHvNWl77avDad_ODON2LT50aL8E-rHOeHuWUzoxJQ" />

    @RenderSection("MetaTags", required: false)

    <title>@ViewData["Title"] - J P Finance Chase Ltd</title>

    <!-- Stylesheets -->
    <link href="~/css/bootstrap.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/style-override.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/responsive.css" rel="stylesheet" asp-append-version="true">
    <link href="~/lib/fancybox/jquery.fancybox.min.css" rel="stylesheet" />

    <link rel="shortcut icon" href="~/images/logo80X60.jpg" type="image/x-icon">
    <link rel="icon" href="~/images/logo80X60.jpg" type="image/x-icon">

    <link href="~/lib/toastr/toastr.min.css" rel="stylesheet" />

    <!-- Responsive -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">

    <!--[if lt IE 9]><script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.js"></script><![endif]-->
    <!--[if lt IE 9]><script src="js/respond.js"></script><![endif]-->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)

</head>
<body>
    <div class="page-wrapper">
        <!-- Preloader -->
        <div class="preloader"></div>

        <!-- Main Header-->
        <header class="main-header header-style-five five-alternate">
            <!-- Marquee -->
            <div class="marquee" style="background-color: black;">
                Helping Ordinary People Achieving Extra-Ordinary Dreams
            </div>
            <!--Header Top-->
            <div class="header-top">
                <div class="auto-container">
                    <div class="inner-container clearfix">
                        <div class="top-left">
                            <ul class="contact-list clearfix">
                                <li><span>J P Finance Chase Ltd</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Header Top -->
            <!--Header-Upper-->
            <div class="header-upper">
                <div class="auto-container">
                    <div class="clearfix">
                        <div class="pull-left logo-box">
                            <div class="logo">
                                <a asp-controller="Home" asp-action="Index">
                                    <img class="lazy-logo" data-src="/images/logo120X90.png" alt="" title="J P Finance Chase Ltd">
                                    <noscript><img src="~/images/logo120X90.png" alt="" title="J P Finance Chase Ltd"></noscript>
                                </a>
                            </div>
                        </div>

                        <div class="nav-outer clearfix">

                            <!-- Main Menu -->
                            <nav class="main-menu navbar-expand-md">
                                <div class="navbar-header">
                                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                </div>

                                <div class="navbar-collapse collapse clearfix" id="navbarSupportedContent">
                                    <ul class="navigation clearfix">
                                        <li>
                                            <a asp-controller="Home" asp-action="Index">Home</a>
                                        </li>
                                        <li><a asp-controller="Home" asp-action="About">About Us</a></li>
                                        <li class="dropdown">
                                            <a href="#">Services</a>
                                            <ul>
                                                <li><a asp-controller="Services" asp-action="Loan">Pawn Precious Things</a></li>
                                                <li><a asp-controller="Services" asp-action="BuySellGold">Trade Precious Metal Bullion</a></li>
                                                <li><a asp-controller="Services" asp-action="Mortgage">Mortgage</a></li>
                                                <li><a asp-controller="Services" asp-action="HAInsurance">Home &amp; Auto Insurance</a></li>
                                                <li><a asp-controller="Services" asp-action="LifeInsurance">Life Insurance</a></li>
                                                <li><a asp-controller="Services" asp-action="PersonalLoan">Personal Loan</a></li>
                                                <li><a asp-controller="Services" asp-action="CarLoan">Car Loan</a></li>
                                                <li><a asp-controller="Services" asp-action="CreditCards">Credit Cards</a></li>
                                                <li><a asp-controller="Services" asp-action="FinancePlanning">Investment &amp; Financial Planning</a></li>
                                            </ul>
                                        </li>
                                        <li><a asp-controller="Home" asp-action="Contact">Contact us</a></li>
                                        <partial name="_LoginPartial" />
                                    </ul>
                                </div>

                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!--End Header Upper-->
            <!--Sticky Header-->
            <div class="sticky-header">
                <div class="auto-container clearfix">
                    <!-- Marquee -->
                    <div class="marquee">
                        Helping Ordinary People Achieving Extra-Ordinary Dreams
                    </div>
                    <!--Logo-->
                    <div class="logo pull-left">
                        <a asp-controller="Home" asp-action="Index" class="img-responsive">
                            <img class="lazy-logo" data-src="/images/logo80X60.jpg" alt="" title="">
                            <noscript><img src="~/images/logo80X60.jpg" alt="" title=""></noscript>
                        </a>
                        <span><a asp-controller="Home" asp-action="Index">J P Finance Chase Ltd</a></span>
                    </div>

                    <!--Right Col-->
                    <div class="right-col pull-right">
                        <!-- Main Menu -->
                        <nav class="main-menu navbar-expand-md">
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent1" aria-controls="navbarSupportedContent1" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>

                            <div class="navbar-collapse collapse clearfix" id="navbarSupportedContent1">
                                <ul class="navigation clearfix">
                                    <li class="current">
                                        <a asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li><a asp-controller="Home" asp-action="About">About Us</a></li>
                                    <li class="dropdown">
                                        <a href="#">Services</a>
                                        <ul>
                                            <li><a asp-controller="Services" asp-action="Loan">Pawn Precious Things</a></li>
                                            <li><a asp-controller="Services" asp-action="BuySellGold">Trade Precious Metal Bullion</a></li>
                                            <li><a asp-controller="Services" asp-action="Mortgage">Mortgage</a></li>
                                            <li><a asp-controller="Services" asp-action="HAInsurance">Home &amp; Auto Insurance</a></li>
                                            <li><a asp-controller="Services" asp-action="LifeInsurance">Life Insurance</a></li>
                                            <li><a asp-controller="Services" asp-action="PersonalLoan">Personal Loan</a></li>
                                            <li><a asp-controller="Services" asp-action="CarLoan">Car Loan</a></li>
                                            <li><a asp-controller="Services" asp-action="CreditCards">Credit Cards</a></li>
                                            <li><a asp-controller="Services" asp-action="FinancePlanning">Investment &amp; Financial Planning</a></li>
                                        </ul>
                                    </li>
                                    <li><a asp-controller="Home" asp-action="Contact">Contact us</a></li>
                                    <partial name="_LoginPartial" />
                                </ul>
                            </div>
                        </nav><!-- Main Menu End-->
                    </div>

                </div>
            </div>
            <!--End Sticky Header-->

        </header>
        <!--End Main Header -->

        @RenderBody()

        <!--Main Footer-->
        <footer class="main-footer style-three">
            <div class="auto-container">
                <!--Widgets Section-->
                <div class="widgets-section">
                    <div class="row clearfix">

                        <!--Column-->
                        <div class="big-column col-lg-6 col-md-12 col-sm-12">
                            <div class="row clearfix">

                                <!--Footer Column-->
                                <div class="footer-column col-lg-7 col-md-6 col-sm-12">
                                    <div class="footer-widget logo-widget">
                                        <div class="logo">
                                            <a asp-controller="Home" asp-action="Index">
                                                <img class="lazy-logo" data-src="/images/logo120X90.png" alt="" />
                                                <noscript><img src="~/images/logo120X90.png" alt="" /></noscript>
                                            </a>
                                        </div>
                                        @{
                                            var query = WebUtility.UrlEncode(ContactInfoOptions.Value.RawAddress);
                                        }
                                        <ul class="list-style-two">
                                            <li>
                                                <span class="icon flaticon-map-1"></span> @Html.Raw(ContactInfoOptions.Value.Address)
                                                <br /><u><a class="font-italic" href="https://www.google.com/maps/search/?api=1&query=@query" target="_blank">view on map <i class="fa fa-external-link"></i></a></u>
                                            </li>
                                            <li><span class="icon flaticon-clock"></span> @Html.Raw(ContactInfoOptions.Value.Hours)</li>
                                            <li><span class="icon flaticon-phone-receiver"></span> <a href="tel:@ContactInfoOptions.Value.Phone">@ContactInfoOptions.Value.Phone</a></li>
                                            <li><span class="icon flaticon-email"></span> <a href="mailto:@ContactInfoOptions.Value.Email">@ContactInfoOptions.Value.Email</a></li>
                                            <li><span class="icon flaticon-calendar"></span> <a href="@ContactInfoOptions.Value.AppointmentLink" target="_blank">Book an appointment</a></li>
                                        </ul>
                                    </div>
                                </div>

                                <!--Footer Column-->
                                <div class="footer-column col-lg-5 col-md-6 col-sm-12">
                                    <div class="footer-widget links-widget">
                                        <h4>Quick Links</h4>
                                        <ul class="list-link">
                                            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                                            <li><a asp-controller="Home" asp-action="About">About us</a></li>
                                            <li><a asp-controller="Services" asp-action="Index">Services</a></li>
                                            <li><a asp-controller="Home" asp-action="Contact">Contact Us</a></li>
                                        </ul>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <!--Column-->
                        <div class="big-column col-lg-6 col-md-12 col-sm-12">
                            <div class="row clearfix">

                                <!--Footer Column-->
                                <div class="footer-column col-lg-6 col-md-6 col-sm-12">
                                    <div class="footer-widget links-widget">
                                        <h4>Services</h4>
                                        <ul class="list-link">
                                            <li><a asp-controller="Services" asp-action="Loan">Pawn Precious Things</a></li>
                                            <li><a asp-controller="Services" asp-action="BuySellGold">Trade Precious Metal Bullion</a></li>
                                            <li><a asp-controller="Services" asp-action="Mortgage">Mortgage</a></li>
                                            <li><a asp-controller="Services" asp-action="HAInsurance">Home &amp; Auto Insurance</a></li>
                                            <li><a asp-controller="Services" asp-action="LifeInsurance">Life Insurance</a></li>
                                            <li><a asp-controller="Services" asp-action="PersonalLoan">Personal Loan</a></li>
                                            <li><a asp-controller="Services" asp-action="CarLoan">Car Loan</a></li>
                                            <li><a asp-controller="Services" asp-action="CreditCards">Credit Cards</a></li>
                                            <li><a asp-controller="Services" asp-action="FinancePlanning">Investment &amp; Financial Planning</a></li>
                                        </ul>
                                    </div>
                                </div>

                                <!--Footer Column-->
                                <div class="footer-column col-lg-6 col-md-6 col-sm-12">
                                    <div class="footer-widget gallery-widget">
                                        <h4>Gallery</h4>
                                        <div class="widget-content">
                                            <div class="images-outer clearfix">
                                                <!--Image Box-->
                                                <figure class="image-box">
                                                    <a href="~/images/gold/gold1.png" class="lightbox-image" data-fancybox="footer-gallery" title="Gold" data-fancybox-group="footer-gallery">
                                                        <img class="lazy-image" data-src="/images/gold/gold1_fg.png" alt="">
                                                        <noscript><img src="~/images/gold/gold1_fg.png" alt=""></noscript>
                                                    </a>
                                                </figure>
                                                <!--Image Box-->
                                                <figure class="image-box">
                                                    <a href="~/images/gold/gold2.png" class="lightbox-image" data-fancybox="footer-gallery" title="Gold" data-fancybox-group="footer-gallery">
                                                        <img class="lazy-image" data-src="/images/gold/gold2_fg.png" alt="">
                                                        <noscript><img src="~/images/gold/gold2_fg.png" alt=""></noscript>
                                                    </a>
                                                </figure>
                                                <!--Image Box-->
                                                <figure class="image-box">
                                                    <a href="~/images/gold/gold3.png" class="lightbox-image" data-fancybox="footer-gallery" title="Gold" data-fancybox-group="footer-gallery">
                                                        <img class="lazy-image" data-src="/images/gold/gold3_fg.png" alt="">
                                                        <noscript><img src="~/images/gold/gold3_fg.png" alt=""></noscript>
                                                    </a>
                                                </figure>
                                                <!--Image Box-->
                                                <figure class="image-box">
                                                    <a href="~/images/gold/gold4.png" class="lightbox-image" data-fancybox="footer-gallery" title="Gold" data-fancybox-group="footer-gallery">
                                                        <img class="lazy-image" data-src="/images/gold/gold4_fg.png" alt="">
                                                        <noscript><img src="~/images/gold/gold4_fg.png" alt=""></noscript>
                                                    </a>
                                                </figure>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!-- Footer Bottom -->
            <div class="footer-bottom">
                <div class="auto-container">
                    <div class="row clearfix">

                        <!-- Copyright Column -->
                        <div class="copyright-column col-lg-6 col-md-6 col-sm-12">
                            <div class="copyright">@DateTime.Now.Year &copy; All rights reserved by <a asp-controller="Home" asp-action="Index">J P Finance Chase Ltd</a></div>
                            <div class="copyright">
                                Developed By:
                                <a data-toggle="modal" data-target="#developer-info-modal">Harsh Dave <i class="fa fa-external-link"></i></a>
                            </div>
                        </div>

                        <div class="modal fade" id="developer-info-modal" tabindex="-1" role="dialog" aria-labelledby="developer-info-modal" aria-hidden="true">
                            <div class="modal-dialog modal-sm" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title text-dark">Contact Developer</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <span class="icon flaticon-email"></span> <a href="mailto:harsh.rdave@hotmail.com"><text>harsh.rdave@hotmail.com</text></a>
                                        <div class="mt-2">
                                            <div class="LI-profile-badge" data-version="v1" data-size="medium" data-locale="en_US" data-type="horizontal" data-theme="dark" data-vanity="harsh-dave-r">
                                                <a class="LI-simple-link" href='https://ca.linkedin.com/in/harsh-dave-r?trk=profile-badge' target="_blank">View Harsh Dave on LinkedIn</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (!SignInManager.IsSignedIn(User))
                        {
                            <div class="social-column col-lg-6 col-md-6 col-sm-12">
                                <ul>
                                    <li><a asp-controller="Account" asp-action="Login">Management Login</a></li>
                                </ul>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </footer>
    </div>
    <!-- Page Wrapper-->
    @* Global Javascripts *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper.min.js"></script>
    <script src="~/lib/bootstrap.min.js"></script>
    <script src="~/lib/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/lib/jquery.fancybox.min.js"></script>
    <script src="~/lib/appear.min.js"></script>
    <script src="~/lib/owl.min.js"></script>
    <script src="~/lib/wow.js"></script>
    <script src="~/lib/validate.js"></script>
    <script src="~/lib/jquery-ui.min.js"></script>
    <script src="~/lib/marquee/jquery.marquee.min.js"></script>
    <script src="~/lib/toastr/toastr.js"></script>
    <script src="~/js/toastr-config.js" asp-append-version="true"></script>
    <script src="~/js/spin-config.js" asp-append-version="true"></script>
    <script src="~/js/site-console.js" asp-append-version="true"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-lazy/jquery.lazy.min.js"></script>
    <!--Google Map APi Key-->
    @*<script src="http://maps.google.com/maps/api/js?key=AIzaSyDTPlX-43R1TpcQUyWjFgiSfL_BiGxslZU"></script>
        <script src="~/js/map-script.js"></script>*@

    @* linkedin plugin *@
    <script type="text/javascript" src="https://platform.linkedin.com/badges/js/profile.js" async defer></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jpfc-helper.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            Jpfc.Site.init();
        });
    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @RenderSection("Scripts", required: false)

    @await Component.InvokeAsync(Constants.ViewComponentKeys.SiteMessageView)
</body>
</html>
