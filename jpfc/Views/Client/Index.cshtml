@{
    ViewData["Title"] = "Clients";

    var now = DateTime.Now;
    var filterStartDate = new DateTime(now.Year, now.Month, 1);
    var filterEndDate = filterStartDate.AddMonths(1).AddDays(-1);
}

@section Styles{
    <link href="~/lib/DataTables/DataTables-1.10.18/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/lib/DataTables/Buttons-1.5.6/css/buttons.bootstrap4.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker3.css" rel="stylesheet" />
    <link href="~/lib/spin/spin.css" rel="stylesheet" />
}

<!--Page Title-->
<section class="page-title" style="background-image:url(../../images/banner-images/receipt.png)">
    <div class="auto-container">
        <div class="content">
            <h1>@ViewData["Title"]</h1>
            <ul class="page-breadcrumb">
                <li><a asp-controller="Admin" asp-action="Index">Home</a></li>
                <li>@ViewData["Title"]</li>
            </ul>
        </div>
    </div>
</section>
<!--End Page Title-->
<!-- Services Section Three-->
<section class="mt-5 mb-5" id="content-container">
    <div class="auto-container">
        <div class="row">
            <div class="col-12">
                <div class="">
                    <a class="btn btn-success text-white" asp-controller="Client" asp-action="AddClient"><i class="fa fa-plus"></i> Add Client</a>
                </div>
            </div>
        </div>
        <!-- Sec Title -->
        <div class="sec-title centered">
            <h2>Saved Clients</h2>
        </div>
        <div class="row clearfix mt-3">
            <div class="col-12">
                <h5>Filter</h5>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <div class="form-group">
                    <label for="FilterStartDate" class="font-weight-bold">Start Date</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                        </div>
                        <input id="FilterStartDate" type="text" class="form-control" value="@filterStartDate.ToString("MM/dd/yyyy")" asp-format="{0:MM/dd/yyyy}" />
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <div class="form-group">
                    <label for="FilterEndDate" class="font-weight-bold">End Date</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                        </div>
                        <input id="FilterEndDate" type="text" class="form-control" value="@filterEndDate.ToString("MM/dd/yyyy")" asp-format="{0:MM/dd/yyyy}" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix mt-3">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="client-table">
                        <thead>
                            <tr>
                                <th width="120px">Date</th>
                                <th width="300px">Name</th>
                                <th>Reference #</th>
                                <th width="100px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @* dataTable ajax *@
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/lib/moment/moment.js"></script>
    <script src="~/lib/DataTables/DataTables-1.10.18/js/jquery.dataTables.js"></script>
    <script src="~/lib/DataTables/DataTables-1.10.18/js/dataTables.bootstrap4.js"></script>
    <script src="~/lib/DataTables/Plug-ins/datatable-moment.js"></script>
    <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/lib/sweetalert/sweetalert2.js"></script>
    <script src="~/lib/spin/spin.js" asp-append-version="true"></script>

    <script src="~/js/pages/client-index.js" asp-append-version="true"></script>
    <script>
        var vm = {};
        $(document).ready(function () {
            Jpfc.ClientIndex.init(vm);
        });
    </script>
}