@model jpfc.Models.ClientViewModels.ClientBelongingViewModel
@inject IMetalRepository MetalRepository

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">Client Belonging</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true"></span>
        </button>
    </div>
    <div class="modal-body">
        <form id="client-belonging-form">
            <div class="row clearfix">
                <div class="col-12 col-lg-4">
                    <div class="row clearfix">
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="BelDate" class="font-weight-bold"></label>
                                <input asp-for="BelDate" class="form-control datepicker" type="text" asp-format="{0:MM/dd/yyyy}" />
                                <span asp-validation-for="BelDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <label asp-for="ClientAction" class="font-weight-bold"></label>
                            <select asp-for="ClientAction" class="form-control">
                                <option value="@Constants.ClientAction.Sell">@Constants.ClientAction.Sell</option>
                                <option value="@Constants.ClientAction.Purchase">@Constants.ClientAction.Purchase</option>
                                <option value="@Constants.ClientAction.Loan">@Constants.ClientAction.Loan</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="row clearfix">
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="MetalId" class="font-weight-bold"></label> <span class="text-danger">*</span>
                                <select asp-for="MetalId" class="form-control"
                                        asp-items="@(new SelectList(await MetalRepository.ListMetalsAsync(), "MetalId", "Name"))">
                                    <option value=""></option>
                                </select>
                                <span asp-validation-for="MetalId" class="text-danger"></span>
                            </div>
                            <div class="form-group" id="metal-other-container" style="display: none;">
                                <label asp-for="MetalOther" class="font-weight-bold"></label> <span class="text-danger">*</span>
                                <input asp-for="MetalOther" class="form-control" />
                                <span asp-validation-for="MetalOther" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group" id="karat-dd-container">
                                <label asp-for="KaratId" class="font-weight-bold"></label> <i class="fa fa-info-circle" data-toggle="tooltip" title="Select metal to view associated purity values"></i>
                                <select asp-for="KaratId" class="form-control">
                                    <option value=""></option>
                                </select>
                                <span asp-validation-for="KaratId" class="text-danger"></span>
                            </div>
                            <div class="form-group" id="karat-other-container" style="display: none;">
                                <label asp-for="KaratOther" class="font-weight-bold"></label>
                                <input asp-for="KaratOther" class="form-control" />
                                <span asp-validation-for="KaratOther" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="Weight" class="font-weight-bold"></label> <span class="text-danger">*</span>
                                <input asp-for="Weight" class="form-control" />
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="row clearfix">
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="ItemPrice" class="font-weight-bold"></label> <span class="text-danger">*</span>
                                <input asp-for="ItemPrice" type="text" class="form-control" />
                                <span asp-validation-for="ItemPrice" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="FinalPrice" class="font-weight-bold"></label> <span class="text-danger">*</span>
                                <input asp-for="FinalPrice" type="text" class="form-control" />
                                <span asp-validation-for="FinalPrice" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="btn-save-belonging">Save <i class="fa fa-spin fa-spinner" style="display: none;"></i></button>
        <a class="btn btn-warning" data-dismiss="modal">Close</a>
    </div>
</div>