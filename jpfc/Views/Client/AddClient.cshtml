@inject IIdentificationDocumentRepository IdentificationDocumentRepository
@model jpfc.Models.ClientReceiptViewModels.CreateClientViewModel

@{
    ViewData["Title"] = "Add Client";
}

@section Styles{
    <link href="~/lib/DataTables/DataTables-1.10.18/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/lib/DataTables/Buttons-1.5.6/css/buttons.bootstrap4.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker3.css" rel="stylesheet" />
    <link href="~/lib/spin/spin.css" rel="stylesheet" />
}

<!--Page Title-->
<section class="page-title" style="background-image:url(../../images/banner-images/receipt.png)">
    <div class="auto-container">
        <div class="content">
            <h1>@ViewData["Title"]</h1>
            <ul class="page-breadcrumb">
                <li><a asp-controller="Admin" asp-action="Index">Home</a></li>
                <li><a asp-controller="Client" asp-action="Index">Clients</a></li>
                <li>@ViewData["Title"]</li>
            </ul>
        </div>
    </div>
</section>
<!--End Page Title-->
<!-- Services Section Three-->
<section class="mt-5 mb-5" id="content-container">
    <div class="auto-container">
        <!-- Sec Title -->
        <div class="sec-title centered">
            @*<div class="title">New Price</div>*@
            <h2>Add/Edit Client</h2>
        </div>
        <form method="post" id="add-client-form">
            <input asp-for="ClientId" />
            <div class="row clearfix">
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="form-group">
                        <label asp-for="Date" class="font-weight-bold"></label>
                        <input asp-for="Date" class="form-control" type="text" readonly asp-format="{0:MM/dd/yyyy}" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="form-group">
                        <label asp-for="ReferenceNumber" class="font-weight-bold"></label>
                        <input asp-for="ReferenceNumber" class="form-control" readonly />
                        <span asp-validation-for="ReferenceNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="form-group">
                        <label asp-for="Name" class="font-weight-bold"></label> <span class="text-danger">*</span>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="form-group">
                        <label asp-for="IdentificationDocumentId" class="font-weight-bold"></label>
                        <select asp-for="IdentificationDocumentId" class="form-control"
                                asp-items="@(new SelectList(await IdentificationDocumentRepository.ListIdentificationDocumentsAsync(), "IdentificationDocumentId", "Name"))">
                            <option value="">-- Select Id Type --</option>
                        </select>
                        <span asp-validation-for="IdentificationDocumentId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="form-group">
                        <label asp-for="IdentificationDocumentNumber" class="font-weight-bold"></label>
                        <input asp-for="IdentificationDocumentNumber" class="form-control" />
                        <span asp-validation-for="IdentificationDocumentNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="font-weight-bold"></label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="form-group">
                        <label asp-for="ContactNumber" class="font-weight-bold"></label>
                        <input asp-for="ContactNumber" type="text" class="form-control" />
                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="form-group">
                        <label asp-for="Address" class="font-weight-bold"></label>
                        <textarea asp-for="Address" rows="3" class="form-control"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary" id="btn-save-client">Save <i class="fa fa-spin fa-spinner" style="display: none;"></i></button>
                    <button type="button" class="btn btn-warning" id="btn-cancel-client">Clear</button>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts{
    <script src="~/lib/moment/moment.js"></script>
    <script src="~/lib/DataTables/DataTables-1.10.18/js/jquery.dataTables.js"></script>
    <script src="~/lib/DataTables/DataTables-1.10.18/js/dataTables.bootstrap4.js"></script>
    <script src="~/lib/DataTables/Plug-ins/datatable-moment.js"></script>
    <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/lib/sweetalert/sweetalert2.js"></script>
    <script src="~/lib/spin/spin.js" asp-append-version="true"></script>

    <script src="~/js/pages/admin-updateprice.js" asp-append-version="true"></script>
    <script>
        var vm = {};

        $(document).ready(function () {
            Jpfc.AdminUpdatePrice.init(vm);
        });
    </script>
}