@using jpfc.ConfigOptions
@using Microsoft.Extensions.Options
@inject IOptions<ContactInfoOptions> ContactInfoOptions
@{
    ViewData["Title"] = "Investment & Finance Planning";
}

<!--Page Title-->
<section class="page-title" style="background-image:url(../../images/investment-2.png)">
    <div class="auto-container">
        <div class="content">
            <h1>@ViewData["Title"]</h1>
            <ul class="page-breadcrumb">
                <li><a asp-controller="Services" asp-action="Index">Services</a></li>
                <li>@ViewData["Title"]</li>
            </ul>
        </div>
    </div>
</section>
<!--End Page Title-->
<!--Sidebar Page Container-->
<div class="sidebar-page-container">
    <div class="auto-container">
        <div class="row clearfix">

            <!--Sidebar Side-->
            <div class="sidebar-side col-lg-4 col-md-4 col-sm-12 d-none d-md-block">
                <aside class="sidebar default-sidebar">

                    <!--Blog Category Widget-->
                    <div class="sidebar-widget sidebar-blog-category">
                        <ul class="blog-cat">
                            <li><a asp-controller="Services" asp-action="Loan">Pawn Precious Things</a></li>
                            <li><a asp-controller="Services" asp-action="BuySellGold">Trade Precious Metal Bullion</a></li>
                            <li><a asp-controller="Services" asp-action="Mortgage">Mortgage</a></li>
                            <li><a asp-controller="Services" asp-action="HAInsurance">Home &amp; Auto Insurance</a></li>
                            <li><a asp-controller="Services" asp-action="LifeInsurance">Life Insurance</a></li>
                            <li><a asp-controller="Services" asp-action="PersonalLoan">Personal Loan</a></li>
                            <li><a asp-controller="Services" asp-action="CreditCards">Credit Cards</a></li>
                            <li class="active"><a asp-controller="Services" asp-action="FinancePlanning">Investment &amp; Financial Planning</a></li>
                        </ul>
                    </div>

                    <!-- Contact Widget-->
                    <div class="sidebar-widget contact-widget">
                        <div class="sidebar-title">
                            <h4>Contact</h4>
                        </div>
                        <ul>
                            <li><span class="icon flaticon-map-1"></span> @Html.Raw(ContactInfoOptions.Value.Address)</li>
                            <li><span class="icon flaticon-clock"></span> @Html.Raw(ContactInfoOptions.Value.Hours)</li>
                            <li><span class="icon flaticon-phone-receiver"></span> <a href="tel:@ContactInfoOptions.Value.Phone">@ContactInfoOptions.Value.Phone</a></li>
                            <li><span class="icon flaticon-email"></span> <a href="mailto:@ContactInfoOptions.Value.Email">@ContactInfoOptions.Value.Email</a></li>
                            <li><span class="icon flaticon-calendar"></span> <a href="@ContactInfoOptions.Value.AppointmentLink" target="_blank">Book an appointment</a></li>
                        </ul>
                    </div>
                </aside>
            </div>

            <!--Content Side-->
            <div class="content-side col-lg-8 col-md-8 col-sm-12">
                <div class="services-single">
                    <h4>@ViewData["Title"]</h4>
                    <div class="image">
                        <img src="~/images/investment-1.png" alt="">
                    </div>
                    <!-- Services Gallery -->
                    <div class="services-gallery">
                        <div class="services-carousel owl-carousel owl-theme">
                            @*<div class="slide">
                                <div class="image">
                                    <img src="~/images/investment-1.png" alt="">
                                </div>
                            </div>*@
                            <div class="slide">
                                <div class="image">
                                    <img src="~/images/investment-2.png" alt="" style="height: 350px;">
                                </div>
                            </div>
                            <div class="slide">
                                <div class="image">
                                    <img src="~/images/investment-3.png" alt="">
                                </div>
                            </div>
                            <div class="slide">
                                <div class="image">
                                    <img src="~/images/investment-4.png" alt="">
                                </div>
                            </div>
                            <div class="slide">
                                <div class="image">
                                    <img src="~/images/investment-5.png" alt="">
                                </div>
                            </div>
                            <div class="slide">
                                <div class="image">
                                    <img src="~/images/investment-6.png" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text">
                        <p>
                            Investment and finance planning have major effects on your financial health.
                            Every single person wants to reduce financial stress and achieve financial freedom.
                            We provide financial prescription to improve financial health.
                            Our customized financial plan will assist you to achieve your financial goals in life.
                            <br />Contact us for free consultation (1 hour free consultation)
                            <br /><span class="text-danger">* we do not guarantee any rates of return, ROI (Return On Investment) or promise of performance</span>
                        </p>
                    </div>
                    @*<div class="quote">
            <blockquote>
                <div class="quote-icon flaticon-left-quote"></div>
                <div class="quote-text">A penny saved is a penny earned. - Benjamin Franklin</div>
            </blockquote>
        </div>*@
                </div>
            </div>

        </div>
    </div>
</div>
<!--End Sidebar Page Container-->