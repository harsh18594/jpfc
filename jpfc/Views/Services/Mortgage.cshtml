@model jpfc.Models.MortgageViewModels.ViewMortgageRateViewModel
@using jpfc.ConfigOptions
@using Microsoft.Extensions.Options
@inject IOptions<ContactInfoOptions> ContactInfoOptions
@{
    ViewData["Title"] = "Mortgage";
}

<!--Page Title-->
<section class="page-title" style="background-image:url(../../images/banner-images/mortgage.jpg)">
    <div class="auto-container">
        <div class="content">
            <h1>@ViewData["Title"]</h1>
            <ul class="page-breadcrumb">
                <li><a asp-controller="Services" asp-action="Index">Services</a></li>
                <li>@ViewData["Title"]</li>
            </ul>
        </div>
    </div>
</section>
<!--End Page Title-->
<!--Sidebar Page Container-->
<div class="sidebar-page-container">
    <div class="auto-container">
        <div class="row clearfix">

            <!--Sidebar Side-->
            <div class="sidebar-side col-lg-4 col-md-4 col-sm-12 d-none d-md-block">
                <aside class="sidebar default-sidebar">

                    <!--Blog Category Widget-->
                    <div class="sidebar-widget sidebar-blog-category">
                        <ul class="blog-cat">
                            <li><a asp-controller="Services" asp-action="Loan">Pawn Precious Things</a></li>
                            <li><a asp-controller="Services" asp-action="BuySellGold">Trade Precious Metal Bullion</a></li>
                            <li class="active"><a asp-controller="Services" asp-action="Mortgage">Mortgage</a></li>
                            <li><a asp-controller="Services" asp-action="HAInsurance">Home &amp; Auto Insurance</a></li>
                            <li><a asp-controller="Services" asp-action="LifeInsurance">Life Insurance</a></li>
                            <li><a asp-controller="Services" asp-action="PersonalLoan">Personal Loan</a></li>
                            <li><a asp-controller="Services" asp-action="CreditCards">Credit Cards</a></li>
                            <li><a asp-controller="Services" asp-action="FinancePlanning">Investment &amp; Financial Planning</a></li>
                        </ul>
                    </div>

                    <!-- Contact Widget-->
                    <div class="sidebar-widget contact-widget">
                        <div class="sidebar-title">
                            <h4>Contact</h4>
                        </div>
                        <ul>
                            <li><span class="icon flaticon-map-1"></span> @Html.Raw(ContactInfoOptions.Value.Address)</li>
                            <li><span class="icon flaticon-clock"></span> @Html.Raw(ContactInfoOptions.Value.Hours)</li>
                            <li><span class="icon flaticon-phone-receiver"></span> <a href="tel:@ContactInfoOptions.Value.Phone">@ContactInfoOptions.Value.Phone</a></li>
                            <li><span class="icon flaticon-email"></span> <a href="mailto:@ContactInfoOptions.Value.Email">@ContactInfoOptions.Value.Email</a></li>
                            <li><span class="icon flaticon-calendar"></span> <a href="@ContactInfoOptions.Value.AppointmentLink" target="_blank">Book an appointment</a></li>
                        </ul>
                    </div>
                </aside>
            </div>

            <!--Content Side-->
            <div class="content-side col-lg-8 col-md-8 col-sm-12">
                <div class="services-single">
                    <h4>@ViewData["Title"]</h4>

                    <!-- Services Gallery -->
                    <div class="image">
                        <img src="~/images/mortgage.jpeg" alt="Mortgage">
                    </div>
                    <div class="text">
                        <p>Helping ordinary people to be home owners.</p>
                    </div>
                    <ul class="list-style-four">
                        @if (Model.Rate.HasValue)
                        {
                            <li>Mortgage rate <strong>@Model.Rate% per 5 years fixed</strong> <br /><span class="text-danger">(Some conditions may apply)</span></li>
                        }

                        <li>Purchase, refinance, home equity line of credit, investment properties, etc.</li>
                        <li>We offer 1<sup>st</sup>, 2<sup>nd</sup> &amp; 3<sup>rd</sup> mortgages</li>
                        <li>Fast approval for 2<sup>nd</sup> &amp; 3<sup>rd</sup> mortgages</li>
                        <li>Over 80 institutional lenders in our portfolio</li>
                        <li><a href="https://www.mortgageweb.ca/en-US/HansalPandya/Services" target="_blank">Click here <i class="fa fa-external-link"></i></a> for more information</li>
                        <li>Fill out an online application form <a href="https://www.mortgageweb.ca/en-US/HansalPandya" target="_blank">here <i class="fa fa-external-link"></i></a></li>
                    </ul>

                    <div class="text mt-4">
                        <p>
                            Investors can invest in 2<sup>nd</sup> &amp; 3<sup>rd</sup> mortgages to achieve double digits ROI (Return On Investment) with secured investment in real estate<br />
                            Call for more details or book an appointment online for free consultation (1 hour free consultation)
                        </p>
                    </div>
                </div>
                <!--Sponsors Section-->
                <section class="sponsors-section">
                    <div class="auto-container">
                        <!-- Sec Title -->
                        <div class="sec-title-three centered">
                            <div class="title">Our Lenders</div>
                        </div>
                        <div class="carousel-outer">
                            <!--Sponsors Slider-->
                            <ul class="sponsors-carousel owl-carousel owl-theme">
                                <li><div class="image-box"><a href="javascript:void(0)"><img src="~/images/partners/td.png" alt=""></a></div></li>
                                <li><div class="image-box"><a href="javascript:void(0)"><img src="~/images/partners/scotiabank.png" alt=""></a></div></li>
                                <li><div class="image-box"><a href="javascript:void(0)"><img src="~/images/partners/attain.png" alt=""></a></div></li>
                                <li><div class="image-box"><a href="javascript:void(0)"><img src="~/images/partners/firstnational.png" alt=""></a></div></li>
                                <li><div class="image-box"><a href="javascript:void(0)"><img src="~/images/partners/mcap.png" alt=""></a></div></li>
                                <li><div class="image-box"><a href="javascript:void(0)"><img src="~/images/partners/b2b.png" alt=""></a></div></li>
                                <li><div class="image-box"><a href="javascript:void(0)"><img src="~/images/partners/hometrust.png" alt=""></a></div></li>
                                <li><div class="image-box"><a href="javascript:void(0)"><img src="~/images/partners/merix.png" alt=""></a></div></li>
                                <li><div class="image-box"><a href="javascript:void(0)"><img src="~/images/partners/equitablebank.png" alt=""></a></div></li>
                                <li><div class="image-box"><a href="javascript:void(0)"><img src="~/images/partners/streetcapital.png" alt=""></a></div></li>
                                <li><div class="image-box"><a href="javascript:void(0)"><img src="~/images/partners/cmls.png" alt=""></a></div></li>
                                <li><div class="image-box"><a href="javascript:void(0)"><img src="~/images/partners/fisgard.png" alt=""></a></div></li>
                                <li><div class="image-box"><a href="javascript:void(0)"><img src="~/images/partners/icicibank.png" alt=""></a></div></li>
                                <li><div class="image-box"><a href="javascript:void(0)"><img src="~/images/partners/optimummortgage.png" alt=""></a></div></li>
                                <li><div class="image-box"><a href="javascript:void(0)"><img src="~/images/partners/rmg.png" alt=""></a></div></li>
                                <li><div class="image-box"><a href="javascript:void(0)"><img src="~/images/partners/bridgewater.png" alt=""></a></div></li>
                                <li><div class="image-box"><a href="javascript:void(0)"><img src="~/images/partners/marathon.png" alt=""></a></div></li>
                            </ul>
                        </div>

                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
<!--End Sidebar Page Container-->