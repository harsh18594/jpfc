@using jpfc.ConfigOptions
@using Microsoft.Extensions.Options
@using jpfc.Views.Services
@inject IOptions<ContactInfoOptions> ContactInfoOptions
<!--Sidebar Side-->
<div class="sidebar-side col-lg-4 col-md-4 col-sm-12 d-none d-md-block">
    <aside class="sidebar default-sidebar">

        <!--Blog Category Widget-->
        <div class="sidebar-widget sidebar-blog-category">
            <ul class="blog-cat">
                <li class="@ServicesNavPages.LoanNavClass(ViewContext)"><a asp-controller="Services" asp-action="Loan">@ServicesNavPages.Loan</a></li>
                <li class="@ServicesNavPages.BuySellGoldNavClass(ViewContext)"><a asp-controller="Services" asp-action="BuySellGold">@ServicesNavPages.BuySellGold</a></li>
                <li class="@ServicesNavPages.MortgageNavClass(ViewContext)"><a asp-controller="Services" asp-action="Mortgage">@ServicesNavPages.Mortgage</a></li>
                <li class="@ServicesNavPages.HAInsuranceNavClass(ViewContext)"><a asp-controller="Services" asp-action="HAInsurance">@ServicesNavPages.HAInsurance</a></li>
                <li class="@ServicesNavPages.LifeInsuranceNavClass(ViewContext)"><a asp-controller="Services" asp-action="LifeInsurance">@ServicesNavPages.LifeInsurance</a></li>
                <li class="@ServicesNavPages.PersonalLoanNavClass(ViewContext)"><a asp-controller="Services" asp-action="PersonalLoan">@ServicesNavPages.PersonalLoan</a></li>
                <li class="@ServicesNavPages.CarLoanNavClass(ViewContext)"><a asp-controller="Services" asp-action="CarLoan">@ServicesNavPages.CarLoan</a></li>
                <li class="@ServicesNavPages.CreditCardsNavClass(ViewContext)"><a asp-controller="Services" asp-action="CreditCards">@ServicesNavPages.CreditCards</a></li>
                <li class="@ServicesNavPages.FinancePlanningNavClass(ViewContext)"><a asp-controller="Services" asp-action="FinancePlanning">@ServicesNavPages.FinancePlanning</a></li>
            </ul>
        </div>

        <!-- Contact Widget-->
        <div class="sidebar-widget contact-widget">
            <div class="sidebar-title">
                <h4>Contact</h4>
            </div>
            @{
                var query = WebUtility.UrlEncode(ContactInfoOptions.Value.RawAddress);
            }
            <ul>
                <li>
                    <span class="icon flaticon-map-1"></span> @Html.Raw(ContactInfoOptions.Value.Address)
                    <br /><a href="https://www.google.com/maps/search/?api=1&query=@query" target="_blank">view on map <i class="fa fa-external-link"></i></a>
                </li>
                <li><span class="icon flaticon-clock"></span> @Html.Raw(ContactInfoOptions.Value.Hours)</li>
                <li><span class="icon flaticon-phone-receiver"></span> <a href="tel:@ContactInfoOptions.Value.Phone">@ContactInfoOptions.Value.Phone</a></li>
                <li><span class="icon flaticon-email"></span> <a href="mailto:@ContactInfoOptions.Value.Email">@ContactInfoOptions.Value.Email</a></li>
                <li><span class="icon flaticon-calendar"></span> <a href="@ContactInfoOptions.Value.AppointmentLink" target="_blank">Book an appointment</a></li>
            </ul>
        </div>
    </aside>
</div>