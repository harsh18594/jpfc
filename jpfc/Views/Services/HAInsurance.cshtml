@using jpfc.ConfigOptions
@using Microsoft.Extensions.Options
@inject IOptions<ContactInfoOptions> ContactInfoOptions
@{
    ViewData["Title"] = "Home & Auto Insurance";
}

<!--Page Title-->
<section class="page-title" style="background-image:url(../../images/home-insur-verico.png)">
    <div class="auto-container">
        <div class="content">
            <h1>@ViewData["Title"]</h1>
            <ul class="page-breadcrumb">
                <li><a asp-controller="Services" asp-action="Index">Services</a></li>
                <li>@ViewData["Title"]</li>
            </ul>
        </div>
    </div>
</section>
<!--End Page Title-->
<!--Sidebar Page Container-->
<div class="sidebar-page-container">
    <div class="auto-container">
        <div class="row clearfix">

            <!--Sidebar Side-->
            <div class="sidebar-side col-lg-4 col-md-4 col-sm-12 d-none d-md-block">
                <aside class="sidebar default-sidebar">

                    <!--Blog Category Widget-->
                    <div class="sidebar-widget sidebar-blog-category">
                        <ul class="blog-cat">
                            <li><a asp-controller="Services" asp-action="Loan">Pawn Precious Things</a></li>
                            <li><a asp-controller="Services" asp-action="BuySellGold">Trade Precious Metal Bullion</a></li>
                            <li><a asp-controller="Services" asp-action="Mortgage">Mortgage</a></li>
                            <li class="active"><a asp-controller="Services" asp-action="HAInsurance">Home &amp; Auto Insurance</a></li>
                            <li><a asp-controller="Services" asp-action="LifeInsurance">Life Insurance</a></li>
                            <li><a asp-controller="Services" asp-action="PersonalLoan">Personal Loan</a></li>
                            <li><a asp-controller="Services" asp-action="CreditCards">Credit Cards</a></li>
                            <li><a asp-controller="Services" asp-action="FinancePlanning">Investment &amp; Financial Planning</a></li>
                        </ul>
                    </div>

                    <!-- Contact Widget-->
                    <div class="sidebar-widget contact-widget">
                        <div class="sidebar-title">
                            <h4>Contact</h4>
                        </div>
                        <ul>
                            <li><span class="icon flaticon-map-1"></span> @Html.Raw(ContactInfoOptions.Value.Address)</li>
                            <li><span class="icon flaticon-clock"></span> @Html.Raw(ContactInfoOptions.Value.Hours)</li>
                            <li><span class="icon flaticon-phone-receiver"></span> <a href="tel:@ContactInfoOptions.Value.Phone">@ContactInfoOptions.Value.Phone</a></li>
                            <li><span class="icon flaticon-email"></span> <a href="mailto:@ContactInfoOptions.Value.Email">@ContactInfoOptions.Value.Email</a></li>
                            <li><span class="icon flaticon-calendar"></span> <a href="@ContactInfoOptions.Value.AppointmentLink" target="_blank">Book an appointment</a></li>
                        </ul>
                    </div>
                </aside>
            </div>

            <!--Content Side-->
            <div class="content-side col-lg-8 col-md-8 col-sm-12">
                <div class="services-single">
                    <h4>@ViewData["Title"]</h4>
                    <div class="image">
                        <img src="~/images/home-insur-verico.png" alt="">
                    </div>
                    <!-- Services Gallery -->
                    @*<div class="services-gallery">
                            <div class="services-carousel owl-carousel owl-theme">
                                <div class="slide">
                                    <div class="image">
                                        <img src="~/images/home-insur.jpg" alt="">
                                    </div>
                                </div>
                                <div class="slide">
                                    <div class="image">
                                        <img src="~/images/auto-insur.jpg" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>*@
                    <div class="text mt-3">
                        <p>
                            Home &amp; Auto insurance at competitive price - Take an advantage of our wholesale volume pricing.
                        </p>
                    </div>
                    <ul class="list-style-one">
                        <li>Homeowners, condo (FLAGSHIP)</li>
                    </ul>
                    <ul class="ml-4 list-style-four">
                        <li>Rented Dwellings/condos, tenants</li>
                        <li>Secondary/Seasonal homes</li>
                        <li>Course of construction</li>
                        <li>Commercial buildings and CGL policies</li>
                        <li>E&O</li>
                        <li>Vacation and travel trailers</li>
                        <li>Mobile homes</li>
                    </ul>
                    <ul class="list-style-one">
                        <li>Auto</li>
                    </ul>
                    <ul class="ml-4 list-style-four">
                        <li>Personal private passenger vehicles</li>
                        <li>Business use vehicles</li>
                        <li>Commercial automobile insurance</li>
                        <li>Snowmobiles</li>
                        <li>ATV’s</li>
                        <li>Motorhomes</li>
                        <li>Motorcycles</li>
                    </ul>
                    <div class="text mt-3">
                        <p>
                            <strong>Province Available</strong> <br />
                            Both Home & Auto: ON, AB, NB, NS <br />
                            Home Only: BC
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End Sidebar Page Container-->