@inject IMetalRepository MetalRepository
@inject IKaratRepository KaratRepository
@model jpfc.Models.UpdatePriceViewModels.CreatePriceViewModel

@{
    ViewData["Title"] = "Update Price";
}

@section Styles{
    <link href="~/lib/DataTables/DataTables-1.10.18/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/lib/DataTables/Buttons-1.5.6/css/buttons.bootstrap4.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker3.css" rel="stylesheet" />
    <link href="~/lib/spin/spin.css" rel="stylesheet" />
}

<!--Page Title-->
<section class="page-title" style="background-image:url(../../images/banner-images/dollars.jpg)">
    <div class="auto-container">
        <div class="content">
            <h1>Update Price</h1>
            <ul class="page-breadcrumb">
                <li><a asp-controller="Admin" asp-action="Index">Home</a></li>
                <li>Update Price</li>
            </ul>
        </div>
    </div>
</section>
<!--End Page Title-->
<!-- Services Section Three-->
<section class="mt-5 mb-5" id="content-container">
    <div class="auto-container">
        <!-- Sec Title -->
        <div class="sec-title centered">
            @*<div class="title">New Price</div>*@
            <h2>Enter Price Below</h2>
        </div>
        <form method="post" id="price-update-form">
            <input asp-for="PriceId" />
            <div class="row clearfix">
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="form-group">
                        <label asp-for="Date" class="font-weight-bold"></label> <span class="text-danger">*</span>
                        <input asp-for="Date" type="text" class="form-control datepicker" asp-format="{0:MM/dd/yyyy}" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="form-group">
                        <label asp-for="MetalId" class="font-weight-bold"></label> <span class="text-danger">*</span>
                        <select asp-for="MetalId" class="form-control"
                                asp-items="@(new SelectList(await MetalRepository.ListMetalsAsync(), "MetalId", "Name"))">
                            <option value=""></option>
                        </select>
                        <span asp-validation-for="MetalId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="form-group">
                        <label asp-for="KaratId" class="font-weight-bold"></label>
                        <select asp-for="KaratId" class="form-control"
                                asp-items="@(new SelectList(await KaratRepository.ListKaratsAsync(), "KaratId", "Name"))">
                            <option value=""></option>
                        </select>
                        <span asp-validation-for="KaratId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="form-group">
                        <label asp-for="Amount" class="font-weight-bold"></label> <span class="text-danger">*</span>
                        <input asp-for="Amount" type="text" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary" id="btn-save-price">Save <i class="fa fa-spin fa-spinner" style="display: none;"></i></button>
                </div>
            </div>
        </form>

        <!-- Sec Title -->
        <div class="sec-title centered">
            @*<div class="title">Saved Prices</div>*@
            <h2>Saved Prices</h2>
        </div>
        <div class="row clearfix mt-3">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="price-table">
                        <thead>
                            <tr>
                                <th width="120px">Date</th>
                                <th width="150px">Metal</th>
                                <th width="100px">Karat</th>
                                <th>Price</th>
                                <th width="130px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @* dataTable ajax *@
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/lib/moment/moment.js"></script>
    <script src="~/lib/DataTables/DataTables-1.10.18/js/jquery.dataTables.js"></script>
    <script src="~/lib/DataTables/DataTables-1.10.18/js/dataTables.bootstrap4.js"></script>
    <script src="~/lib/DataTables/Plug-ins/datatable-moment.js"></script>
    <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/lib/sweetalert/sweetalert2.js"></script>
    <script src="~/lib/spin/spin.js" asp-append-version="true"></script>

    <script src="~/js/pages/admin-updateprice.js" asp-append-version="true"></script>
    <script>
        var vm = {};

        $(document).ready(function () {
            Jpfc.AdminUpdatePrice.init(vm);
        });
    </script>
}