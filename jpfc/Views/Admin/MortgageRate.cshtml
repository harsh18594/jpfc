@model jpfc.Models.MortgageViewModels.CreateMortgageRateViewModel

@{
    ViewData["Title"] = "Update Mortgage Rate";
}

@section Styles{
}

<!--Page Title-->
<section class="page-title" style="background-image:url(../../images/banner-images/dollars.jpg)">
    <div class="auto-container">
        <div class="content">
            <h1>@ViewData["Title"]</h1>
            <ul class="page-breadcrumb">
                <li><a asp-controller="Admin" asp-action="Index">Home</a></li>
                <li>@ViewData["Title"]</li>
            </ul>
        </div>
    </div>
</section>
<!--End Page Title-->
<!-- Services Section Three-->
<section class="mt-5 mb-5" id="content-container">
    <div class="auto-container">
        <!-- Sec Title -->
        <div class="sec-title centered">
            <h2>Enter Mortgage Rate</h2>
        </div>
        <form method="post" id="mortgage-rate-form">
            <div class="row clearfix">
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="form-group">
                        <label asp-for="Rate" class="font-weight-bold"></label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-percent"></i></span>
                            </div>
                            <input asp-for="Rate" type="text" class="form-control" />
                        </div>
                        <span asp-validation-for="Rate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary" id="btn-save-rate">Save <i class="fa fa-spin fa-spinner" id="loading-spinner" style="display: none;"></i></button>
                    <a class="btn btn-warning" asp-controller="Admin" asp-action="Index">Back</a>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#mortgage-rate-form').on('submit', function () {
                if ($('#mortgage-rate-form').valid()) {
                    $('#btn-save-rate').find('#loading-spinner').show();
                }
            });
        });       
    </script>
}